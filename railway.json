{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "gunicorn unified_backend_api:app --bind 0.0.0.0:$PORT --timeout 120 --graceful-timeout 120 --workers 1 --threads 4 --worker-tmp-dir /dev/shm",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
